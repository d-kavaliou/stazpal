# RunPod Configuration
RUNPOD_POD_ID=your_pod_id
RUNPOD_API_KEY=your_api_key

# Model Paths
KYUTAI_STT_MODEL_PATH=/workspace/models/kyutai-stt-1b
KYUTAI_TTS_MODEL_PATH=/workspace/models/kyutai-tts
ORPHEUS_MODEL_PATH=/workspace/models/orpheus-tts
LLM_MODEL_PATH=/workspace/models/llama-3.2-3b.gguf

# Service Ports
ORCHESTRATOR_PORT=8000
STT_SERVICE_PORT=8001
